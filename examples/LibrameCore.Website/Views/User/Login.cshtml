@{
    ViewData["Title"] = "Login";

    var handlerPath = "/handler/token";
}
<h2>User Login</h2>
<hr />

<div class="form-horizontal">
    <form action="@handlerPath" method="post">
        <fieldset>
            <h3 class="col-sm-offset-1">User Info</h3>
        </fieldset>

        <div class="form-group">
            <label for="username" class="control-label col-sm-1">帐户</label>
            <div class="col-sm-6">
                <input id="username" name="username" type="text" value="LibrameUser" />
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="control-label col-sm-1">帐户</label>
            <div class="col-sm-6">
                <input id="password" name="password" type="password" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-6">
                <button type="submit" class="btn btn-default">登录</button>
            </div>
        </div>
    </form>
</div>