@model LibrameCore.Extensions.Filtration.FiltrationExtensionOptions
@{
    ViewData["Title"] = "SensitiveWord";
}
<h2>敏感词测试</h2>
<hr />

<div class="form-horizontal">
    <form action="" method="post">
        <fieldset>
            <h3 class="col-sm-offset-1">当前的敏感词有：@Model.SensitiveWord.Words</h3>
        </fieldset>

        <div class="form-group">
            <label for="words" class="control-label col-sm-1">文本</label>
            <div class="col-sm-6">
                <textarea id="words" name="words" class="form-control" rows="10"></textarea>
                <span style="color:red;">*</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-6">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>