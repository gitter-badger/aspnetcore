@model IApplicationContext
@{
    var nav = Model.CurrentProject.Navigation;
}

@if (nav.ManageLayout.Sidebar.IsNotEmpty())
{
    <ul class="nav">
    @foreach (var descr in nav.ManageLayout.Sidebar)
    {
        if (descr.VisibilityFactory.Invoke(this, descr))
        {
            <li class="nav-item @descr.ActiveCssClassNameFactory.Invoke(this, descr)">
                <a id="@descr.TagId" href="@descr.ToRouteString(Url)" title="@descr.TagTitle">
                    <i class="@descr.Icon"></i>
                    <p>@descr.Text</p>
                </a>
            </li>
        }
    }
    </ul>
}
