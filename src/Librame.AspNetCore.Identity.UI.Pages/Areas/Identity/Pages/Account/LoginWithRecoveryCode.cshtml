@page
@model AbstractLoginWithRecoveryCodePageModel
@inject IExpressionHtmlLocalizer<LoginWithRecoveryCodeViewResource> Localizer
@{
    Layout = "_LayoutByLogin";
    ViewData["Title"] = Localizer[r => r.Title];
}
<!-- LoginWithRecoveryCode -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>@ViewData["Title"]</h3>
                <p>@Localizer[r => r.Descr]</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>
        </div>

        <div class="form-bottom">
            <form role="form" action="" method="post" class="login-form" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.RecoveryCode" class="sr-only"></label>
                    <input asp-for="Input.RecoveryCode" class="form-username form-control" autocomplete="off" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">@Localizer[r => r.ButtonText]</button>
                </div>
            </form>
        </div>
    </div>
</div>