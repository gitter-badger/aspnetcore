@page
@model ResetAuthenticatorPageModel
@inject IExpressionHtmlLocalizer<ResetAuthenticatorViewResource> Localizer
@{
    ViewData["Title"] = Localizer[r => r.Title];
    ViewData["ActiveView"] = ViewPageNames.TwoFactorAuthentication;
}

<partial name="_StatusMessagePartial" model="Model.StatusMessage" />

<!-- ResetAuthenticator -->
<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <span data-notify="icon" class="la la-bell"></span>
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Localizer[r => r.Descr]</strong>
    </p>
    <p>
        @Localizer[r => r.Info]
    </p>
</div>

<div>
    <form id="reset-authenticator-form" method="post" class="form-group">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@Localizer[r => r.ButtonText]</button>
    </form>
</div>