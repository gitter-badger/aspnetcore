@page
@model AbstractGenerateRecoveryCodesPageModel
@inject IExpressionHtmlLocalizer<GenerateRecoveryCodesViewResource> Localizer
@{
    ViewData["Title"] = Localizer[r => r.Title];
    ViewData["ActivePage"] = ViewPageNames.TwoFactorAuthentication;
}

<partial name="_StatusMessagePartial" model="Model.StatusMessage" />

<!-- GenerateRecoveryCodes -->
<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Localizer[r => r.Descr]</strong>
    </p>
    <p>
        @Localizer[r => r.Remark]
    </p>
    <p>
        @Localizer[r => r.Info]
    </p>
</div>

<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@Localizer[r => r.ButtonText]</button>
    </form>
</div>
