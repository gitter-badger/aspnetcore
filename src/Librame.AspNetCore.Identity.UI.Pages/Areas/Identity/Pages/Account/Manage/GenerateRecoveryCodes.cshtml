@page
@model GenerateRecoveryCodesPageModel
@inject IExpressionHtmlLocalizer<GenerateRecoveryCodesViewResource> Localizer
@{
    ViewData["Title"] = Localizer[r => r.Title];
    ViewData["ActiveView"] = ViewPageNames.TwoFactorAuthentication;
}

<partial name="_StatusMessagePartial" model="Model.StatusMessage" />

<!-- GenerateRecoveryCodes -->
<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Localizer[r => r.Descr]</strong>
    </p>
    <p>
        @Localizer[r => r.Remark]
    </p>
    <p>
        @Localizer[r => r.Info]
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post" class="form-group">
            <div class="form-group">
                <button type="submit" class="btn btn-default">@Localizer[r => r.ButtonText]</button>
            </div>
        </form>
    </div>
</div>
