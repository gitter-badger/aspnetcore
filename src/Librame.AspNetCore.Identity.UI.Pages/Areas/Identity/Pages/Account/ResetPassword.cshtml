@page
@model AbstractResetPasswordPageModel
@inject IExpressionHtmlLocalizer<ResetPasswordViewResource> Localizer
@{
    Layout = "_LayoutByLogin";
    ViewData["Title"] = Localizer[r => r.Title];
}
<!-- Register -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>@ViewData["Title"]</h3>
                <p>@Localizer[r => r.Descr]</p>
            </div>
            <div class="form-top-right">
                <!-- <i class="fa fa-key"></i> -->
            </div>
        </div>

        <div class="form-bottom">
            <form role="form" action="" method="post" class="login-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="Input.Token" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Name" class="sr-only"></label>
                    <input asp-for="Input.Name" class="form-username form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Name) ..." />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="sr-only"></label>
                    <input asp-for="Input.Password" class="form-password form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Password) ..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-password form-control" placeholder="@Html.DisplayNameFor(m => m.Input.ConfirmPassword) ..." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">@Localizer[r => r.ButtonText]</button>
                </div>
            </form>
        </div>
    </div>
</div>
