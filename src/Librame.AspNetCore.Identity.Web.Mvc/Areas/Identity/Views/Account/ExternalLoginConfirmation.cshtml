@model ExternalLoginConfirmationViewModel
@inject IHtmlLocalizer<ExternalLoginViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
    var providerDisplayName = ViewData["ProviderDisplayName"];
}
<!-- ExternalLoginConfirmation -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>@Localizer.GetString(r => r.Title, providerDisplayName)</h3>
                <p>@Localizer.GetString(r => r.Descr, providerDisplayName)</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>
        </div>

        <div class="form-bottom">
            <form method="post" class="login-form" asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]"
                  asp-route-culture="@ViewContext.HttpContext.Request.Query["culture"]"
                  asp-route-uiculture="@ViewContext.HttpContext.Request.Query["uiculture"]">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="sr-only"></label>
                    <input asp-for="Email" class="form-username form-control" placeholder="@Localizer.GetString(r => r.Email) ..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">@Localizer.GetString(r => r.ButtonText)</button>
                </div>
            </form>
        </div>
    </div>
</div>
