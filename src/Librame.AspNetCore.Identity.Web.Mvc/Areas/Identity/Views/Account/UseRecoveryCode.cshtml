@model UseRecoveryCodeViewModel
@inject IHtmlLocalizer<UseRecoveryCodeViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
}
<!-- UseRecoveryCode -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>@ViewData["Title"]</h3>
                <p>@ViewData["Status"]</p>
            </div>
            <div class="form-top-right">
                <!-- <i class="fa fa-key"></i> -->
            </div>
        </div>

        <div class="form-bottom">
            <form method="post" class="login-form" asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl"
                  asp-route-culture="@ViewContext.HttpContext.Request.Query["culture"]"
                  asp-route-uiculture="@ViewContext.HttpContext.Request.Query["uiculture"]">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Code" class="sr-only"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">@Localizer.GetString(r => r.ButtonText)</button>
                </div>
            </form>
        </div>
    </div>
</div>
