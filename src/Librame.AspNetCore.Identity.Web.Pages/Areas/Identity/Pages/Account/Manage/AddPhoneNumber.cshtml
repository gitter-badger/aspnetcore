@page
@model AddPhoneNumberPageModel
@inject IHtmlLocalizer<AddPhoneNumberViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
}

<!-- AddPhoneNumber -->
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-10">
        <form method="post" class="form-horizontal"
              asp-route-culture="@ViewContext.HttpContext.Request.Query["culture"]"
              asp-route-uiculture="@ViewContext.HttpContext.Request.Query["uiculture"]">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Phone) ..." />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">@Localizer.GetString(r => r.ButtonText)</button>
            </div>
        </form>
    </div>
</div>
