@page
@model VerifyPhoneNumberPageModel
@inject IHtmlLocalizer<VerifyPhoneNumberViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
}

<!-- VerifyPhoneNumber -->
<h4>@ViewData["Title"]</h4>

<partial name="_StatusMessagePartial" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-10">
        <form method="post" class="form-horizontal"
              asp-route-culture="@ViewContext.HttpContext.Request.Query["culture"]"
              asp-route-uiculture="@ViewContext.HttpContext.Request.Query["uiculture"]">

            <input asp-for="Input.Phone" type="hidden" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Code"></label>
                <input asp-for="Input.Code" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Code) ..." />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">@Localizer.GetString(r => r.ButtonText)</button>
            </div>
        </form>
    </div>
</div>
