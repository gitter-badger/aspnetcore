@page
@model DeletePersonalDataPageModel
@inject IHtmlLocalizer<DeletePersonalDataViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
    ViewData["ActiveView"] = ViewPageNames.PersonalData;
}

<!-- DeletePersonalData -->
<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Localizer.GetString(r => r.Descr)</strong>
    </p>
</div>

<div class="row">
    <div class="col-md-10">
        <form id="delete-user" method="post" class="form-group"
              asp-route-culture="@ViewContext.HttpContext.Request.Query["culture"]"
              asp-route-uiculture="@ViewContext.HttpContext.Request.Query["uiculture"]">

            <div asp-validation-summary="All" class="text-danger"></div>

            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <button type="submit" class="btn btn-default">@Localizer.GetString(r => r.ButtonText)</button>
            </div>
        </form>
    </div>
</div>
