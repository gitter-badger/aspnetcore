@using System.Collections.Generic
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject IExpressionHtmlLocalizer<LoginViewResource> Localizer
@{
    ViewData["Title"] = Localizer[r => r.Title];
    var loginProviders = ViewData["ExternalSchemes"] as IEnumerable<AuthenticationScheme>;
}
<!-- Login -->
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
            <div class="form-top-left">
                <h3>@ViewData["Title"]</h3>
                <p>@Localizer[r => r.Descr]</p>
            </div>
            <div class="form-top-right">
                <i class="fa fa-key"></i>
            </div>
        </div>

        <div class="form-bottom">
            <form id="account" method="post" class="login-form" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="sr-only"></label>
                    <input asp-for="Email" class="form-username form-control" placeholder="@Html.DisplayNameFor(m => m.Email) ..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-password form-control" placeholder="@Html.DisplayNameFor(m => m.Password) ..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)?
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">@Localizer[r => r.ButtonText]</button>
                </div>

                <div class="form-group overflow-hidden">
                    <div class="col-sm-6">
                        <p>
                            <a asp-page="./ForgotPassword">
                                @Localizer[r => r.ForgotPassword]
                            </a>
                        </p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                                @Localizer[r => r.RegisterUser]
                            </a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3 social-login">
        <h3>@Localizer[r => r.ExternalLoginDescr]</h3>
        <div class="social-login-buttons">
            @{
                if (loginProviders.IsNullOrEmpty())
                {
                    <div>
                        <p>
                            @Localizer[r => r.ExternalLoginInfo]
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in loginProviders)
                                {
                                    <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="@Localizer[r => r.ExternalLoginTitle, provider.DisplayName]">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>
