@model ManageLoginsViewModel
@{
    var localizer = ViewBag.Localizer as IExpressionHtmlLocalizer<ExternalLoginsViewResource>;
    ViewData["Title"] = localizer[r => r.Title];
}

<p class="text-success">@ViewData["StatusMessage"]</p>

<!-- ManageLogins -->
<h4>@localizer[r => r.Descr]</h4>

@if (Model.CurrentLogins?.Count > 0)
{
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                <tr>
                    <td>@login.LoginProvider</td>
                    <td>
                        @if ((bool)ViewData["ShowRemoveButton"])
                        {
                            <form id="remove-login" asp-page-handler="RemoveLogin" method="post">
                                <div>
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-default" title="@localizer[r => r.ButtonTitle, login.LoginProvider]">@localizer[r => r.ButtonText]</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>@localizer[r => r.NoneLogins]</p>
}

@if (Model.OtherLogins.Count > 0)
{
    <h4>@localizer[r => r.AnotherDescr]</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="link-login-button" type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="@localizer[r => r.AnotherLoginTitle, provider.DisplayName]">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>
}
