@model AddPhoneNumberViewModel
@{
    var localizer = ViewBag.Localizer as IExpressionHtmlLocalizer<AddPhoneNumberViewResource>;
    ViewData["Title"] = localizer[r => r.Title];
}

<!-- AddPhoneNumber -->
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Manage" asp-action="AddPhoneNumber" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Phone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Phone" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Phone) ..." />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">@localizer[r => r.ButtonText]</button>
            </div>
        </form>
    </div>
</div>
