@model VerifyPhoneNumberViewModel
@{
    var localizer = ViewBag.Localizer as IHtmlLocalizer<VerifyPhoneNumberViewResource>;
    ViewData["Title"] = localizer.GetString(r => r.Title);
}

<!-- VerifyPhoneNumber -->
<h4>@ViewData["Title"]</h4>

<p class="text-success">@ViewData["Status"]</p>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <input asp-for="Phone" type="hidden" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Code" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Code" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Code) ..." />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">@localizer.GetString(r => r.ButtonText)</button>
            </div>
        </form>
    </div>
</div>