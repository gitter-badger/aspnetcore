@model LogoutViewModel
@inject IHtmlLocalizer<LogoutViewResource> Localizer
@{
    ViewData["Title"] = Localizer.GetString(r => r.Title);
}
<!-- Logout -->
<div class="logout-page">
    <div class="page-header">
        <h1>@Localizer.GetString(r => r.Title)</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>@Localizer.GetString(r => r.Descr)</p>

            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId" />

                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">@Localizer.GetString(r => r.ButtonText)</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>